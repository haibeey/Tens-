<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/image_button"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:layout_height="150dp"
                android:src="@drawable/capsule_like"
                android:contentDescription="@string/todo" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="end|top"
                android:id="@+id/vid_selected"
                android:layout_alignRight="@+id/image_button"
                android:background="@drawable/video_item_selected"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_alignEnd="@+id/image_button"
                android:contentDescription="@string/todo" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/video_name"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:text="text"
                android:textColor="@color/colorPrimaryDark"
                android:padding="3dp"
                android:layout_height="wrap_content" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/video_size"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:text="text"
                android:textColor="@color/colorPrimaryDarkLessTrans"
                android:padding="3dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>